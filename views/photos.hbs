<h1>Dogs</h1>
<div class="main">
	<form data-id={{albId}} id="formFoto" name="joinForm">
      <input class="text addButton" type="text" name="photo_title" placeholder="photo_title" />
			<input class="text addButton" type="text" name="description" placeholder="description" />
			<input class="btn btn-primary addButton" type="file" name="image" placeholder="image" />
      <div>
        <button class="btn btn-primary addButton" type="submit">add photo</button>
      </div>
  </form>

  {{#each photos}}
  <form id="form-{{id}}" name="photoBut">
  <div id='div-{{id}}'  class="card addButton" style="width: 18rem;">
    <img src="{{this.image}}" class="card-img-top" alt="photo">
    <div class="card-body">
     <h5 class="card-title">{{this.photo_title}}</h5>
      <p class="card-text">{{this.description}}</p>
    
      <a href="/card/{{id}}">Edit</a>
    </div>  
  </div>
  </form>
  {{/each}}
</div>
