
<h1>PhotoCards</h1>
{{#if check2}}
<form form data-id={{albId}} id="form" name="busForm">
  <div class="mb-3">
    <input type="text" class="form-control" name="photo_title" placeholder="photo_title">
    <input type="text" class="form-control" name="description" placeholder="description">
    <input type="file" class="form-control" name="image" placeholder="image">
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>
<div class="container">
<div id="dogList" class="row1">
	{{#each photos}}
	<div id='div-{{id}}' class="card standart" >
  <img src="{{this.image}}" class="card-img-top" alt={{this.title}}>
  <div class="card-body">
    <h5 class="card-title">{{this.photo_title}}</h5>
    <p class="card-text">{{this.description}}</p>
    <button data-more={{id}} class="btn btn-primary">view more</button>
		<button data-edit={{id}} class="btn btn-primary" type="click">edit</button>
		<button data-delete={{id}} class="btn btn-primary" type="click">delete</button>
  </div>
</div>

{{/each}}
</div>
</div>
{{else}}
<div class="container">
<div id="dogList">
	{{#each photos}}
	<div id='div-{{id}}' class="card standart" >
  <img src="{{this.image}}" class="card-img-top" alt={{this.title}}>
  <div class="card-body">
    <h5 class="card-title">{{this.photo_title}}</h5>
    <p class="card-text">{{this.description}}</p>
    <button data-more={{id}} class="btn btn-primary">view more</button>
  </div>
</div>
{{/each}}
{{/if}}
